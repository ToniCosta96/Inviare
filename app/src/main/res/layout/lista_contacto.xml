<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/unknown"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageViewContacto"
        android:maxHeight="@dimen/max_size_64"
        android:maxWidth="@dimen/max_size_64"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:contentDescription="@string/contentDescription_imageViewContacto" />

    <TextView
        android:text="Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTitulo"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageViewContacto"
        android:layout_marginStart="@dimen/separacion_contacto_titulo" />

    <TextView
        android:text="Subtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSubtitulo"
        android:layout_below="@+id/textViewTitulo"
        android:layout_alignStart="@+id/textViewTitulo" />

    <TextView
        android:text="Fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textViewInfoExtra" />

</RelativeLayout>