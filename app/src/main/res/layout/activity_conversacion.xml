<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_conversacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prova.inviare.ConversacionActivity"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_view_conversacion"
        android:layout_above="@+id/linearLayoutConversacion"/>

    <LinearLayout
        android:id="@+id/linearLayoutConversacion"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/editTextConversacion"
            android:labelFor="@+id/editTextConversacion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"
            android:ems="10"
            android:layout_weight="1" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_access_alarm_24dp"
            android:id="@+id/floatingActionButton"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

</RelativeLayout>
