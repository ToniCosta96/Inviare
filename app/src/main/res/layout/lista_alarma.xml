<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="4dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="294dp"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_gravity="start"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tipo_a"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:text="Tipo de alarma" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mensaje"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inicio_h"
                android:textColorLink="?attr/actionMenuTextColor"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dia_duracion"
                android:textColor="@color/authui_inputTextColorDark"
                android:textSize="18dp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frecuencia"
                android:layout_weight="1"
                android:textColor="@color/authui_inputTextColorDark"
                android:textSize="18dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="93dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:weightSum="1"
            android:id="@+id/layout">


            <ImageView
                android:layout_width="84dp"
                android:layout_height="71dp"
                android:id="@+id/imgAlarma"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>